{
  "name": "Lisk",
  "version": "2.0.2",
  "author": "Lisk Foundation <admin@lisk.com>, lightcurve GmbH <admin@lightcurve.io>",
  "license": "GPL-3.0",
  "productName": "Lisk",
  "description": "Lisk",
  "homepage": "https://github.com/LiskHQ/lisk-desktop",
  "bugs": "https://github.com/LiskHQ/lisk-desktop/issues",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/LiskHQ/lisk-desktop"
  },
  "engines": {
    "node": ">=v12.7.0"
  },
  "scripts": {
    "dev": "cross-env DEBUG=true NACL_FAST=disable && webpack serve --config ./config/webpack.config.dev",
    "dev:hw": "cross-env DEBUG=true webpack serve --config ./config/webpack.config.dev --https",
    "start": "cross-env DEBUG=true npm run rebuild && electron ./app/",
    "rebuild": "electron-rebuild -m app/node_modules/node-hid && electron-rebuild -m app/node_modules/usb",
    "build": "npm-run-all clean:build copy:files build:prod build:electron",
    "build:prod": "webpack --config ./config/webpack.config.prod",
    "build:electron": "webpack --config ./config/webpack.config.electron",
    "dist": "electron-builder --x64 --publish onTag",
    "dist:win": "electron-builder --win --ia32 --x64 --publish onTag",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux --x64 --publish onTag",
    "pack": "npm ci && npm run build && npm run clean:dist && npm run dist",
    "pack:win": "cmd /c npm ci && npm run install:electron:dependencies && npm run clean:build && npm run copy:files && npm run build:prod && npm run build:electron && npm run clean:dist && npm run dist:win",
    "test": "jest --config ./jest.config.js",
    "test:live": "npm test -- --watch",
    "cypress:open": "cypress open --project test/cypress",
    "cypress:run": "cypress run --project test/cypress",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "storybook": "start-storybook -p 6006",
    "percy": "build-storybook && percy-storybook --widths=769",
    "postinstall": "electron-builder install-app-deps",
    "install:storybook:dependencies": "cd ./storybook/; npm ci; cd ..",
    "install:electron:dependencies": "cd ./app && npm ci && cd ..",
    "analyze:bundles": "webpack  --config ./config/webpack.config.analyze",
    "copy:files": "cpx \"./src/{index.html,assets/**/*}\" ./app/build/",
    "clean:build": "rm -rf app/build",
    "clean:dist": "rm -rf dist"
  },
  "build": {
    "asar": true,
    "appId": "io.lisk.hub",
    "copyright": "Copyright Â© 2016-2021 Lisk",
    "afterSign": "electron-builder-notarize",
    "protocols": {
      "name": "lisk",
      "schemes": [
        "lisk"
      ]
    },
    "artifactName": "lisk-${os}-${arch}-${version}.${ext}",
    "publish": [
      "github"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "desktop": {
        "MimeType": "application/lisk;x-scheme-handler/lisk"
      },
      "category": "Network"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.plist",
      "entitlementsInherit": "build/entitlements.plist"
    },
    "dmg": {
      "background": "./build/background@2x.png",
      "contents": [
        {
          "x": 584,
          "y": 230,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 380,
          "y": 232,
          "type": "file"
        }
      ],
      "window": {
        "width": 660,
        "height": 480
      }
    }
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "stepDefinitions": "features/"
  },
