  "build": {
    "asar": true,
    "appId": "io.lisk.hub",
    "copyright": "Copyright Â© 2017-2020 Lisk",
    "afterSign": "electron-builder-notarize",
    "protocols": {
      "name": "lisk",
      "schemes": [
        "lisk"
      ]
    },
    "artifactName": "lisk-${os}-${arch}-${version}.${ext}",
    "publish": [
      "github"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "desktop": {
        "MimeType": "application/lisk;x-scheme-handler/lisk"
      },
      "category": "Network"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.plist",
      "entitlementsInherit": "build/entitlements.plist"
    },
    "dmg": {
      "background": "./build/background@2x.png",
      "contents": [
        {
          "x": 584,
          "y": 230,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 380,
          "y": 232,
          "type": "file"
        }
      ],
      "window": {
        "width": 660,
        "height": 480
      }
    }
  },
  "engines": {
    "node": ">=v12.7.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "stepDefinitions": "features/"
  }
