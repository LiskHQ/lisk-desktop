root = true

[*]
end_of_line = lf
insert_final_newline = true

# Indent size here should match .prettierrc
[*.js]
charset = utf-8
indent_style = space
indent_size = 2

[*.json]
charset = utf-8
indent_style = space
indent_size = 2

# Makefiles must be indented with tab to work
[Makefile]
indent_style = tab
