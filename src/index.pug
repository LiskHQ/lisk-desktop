doctype html
html
  head
    meta(charset='utf-8')
    title Lisk Nano
    style(type='text/css').
      .preloading {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
      }

      .preloading-loader {
        position: relative;
        margin: 0px auto;
        width: 100px;
        height: 100%;

        &:before {
          content:'';
          display: block;
          padding-top: 100%;
        }
      }

      .preloading-circular {
        animation: preloading_rotate 2s linear infinite;
        height: 100%;
        transform-origin: center center;
        width: 100%;
        position: absolute;
        top: 0; bottom: 0; left: 0; right: 0;
        margin: auto;
      }

      .preloading-path {
        stroke-dasharray: 1,200;
        stroke-dashoffset: 0;
        animation: preloading_dash 1.5s ease-in-out infinite, preloading_color 6s ease-in-out infinite;
        stroke-linecap: round;
      }

      @keyframes preloading_rotate {
        100% { transform: rotate(360deg); }
      }

      @keyframes preloading_dash {
        0% {
          stroke-dasharray: 1,200;
          stroke-dashoffset: 0;
        }
        50% {
          stroke-dasharray: 89,200;
          stroke-dashoffset: -35px;
        }
        100% {
          stroke-dasharray: 89,200;
          stroke-dashoffset: -124px;
        }
      }

      @keyframes preloading_color {
        100%, 0% { stroke: #f57c00; }
        40% { stroke: #be9c77; }
        66% { stroke: #0288d1; }
      }

  body(ng-controller='AppCtrl')
    .preloading: .preloading-loader: svg.preloading-circular(viewbox='25 25 50 50')
      circle.preloading-path(cx='50', cy='50', r='20', fill='none', stroke-width='2', stroke-miterlimit='10')
    script(src='app.js')
