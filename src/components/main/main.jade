md-content(layout='row')
  md-content(flex='100', flex-gt-sm='80', flex-offset-gt-sm='10')
    md-content.header(layout='row', layout-align='center center', layout-padding)
      img.logo(src=require('./images/LISK.png'))
      h2.md-display-1 Lisk Nano
      div(flex)
      md-button.md-fab.md-mini.md-primary.logout(ng-click='logout()', ng-if='logged')
        i.material-icons close
        md-tooltip(md-direction='left') Logout
    div(layout='row', layout-align='space-around', ng-show='prelogged')
      md-progress-circular.md-warn(md-mode='indeterminate', md-diameter='120')
    div(ng-show='!prelogged && !logged')
      login
    div(ng-if='logged')
      top(account='account', peer='peer')
      send(account='account', peer='peer', passphrase='passphrase')
      transactions(account='account', peer='peer')
