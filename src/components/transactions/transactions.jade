md-card(ng-show='transactions.length')
  md-card-title
    md-card-title-text
      span.md-title Transactions
  md-card-content
    md-table-container
      table(md-table)
        thead(md-head)
          tr(md-row)
            th(md-column) Date
            th(md-column) Sender
            th(md-column) Recipient
            th(md-column) Amount
            th(md-column)
        tbody(md-body)
          tr(md-row, ng-repeat="transaction in transactions")
            td(md-cell) {{ ::transaction.timestamp | timestamp }}
            td(md-cell) {{ ::transaction.senderId }}
            td(md-cell) {{ ::transaction.recipientId }}
            td(md-cell).lsk(data='transaction.amount')
            td(md-cell, flex='none')
              i.material-icons.type(ng-if='transaction.senderId === address', style='color: red') call_made
              i.material-icons.type(ng-if='transaction.senderId !== address', style='color: green') call_received
