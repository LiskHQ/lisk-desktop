{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react",
    "import",
    "babel",
    "jest"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "globals": {
    "describe": true,
    "it": true,
    "beforeEach": true,
    "afterEach": true,
    "ipc": true,
    "PRODUCTION": true,
    "TEST": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "implicit-arrow-linebreak": "off",
    "object-curly-newline": "off",
    "import/no-useless-path-segments": "off",
    "no-multiple-empty-lines": "error",
    "operator-linebreak": "off",
    "lines-between-class-members": "off",
    "indent": "error",
    "import/order": "off",
    "function-paren-newline": "off",
    "no-else-return": "error",
    "react/jsx-no-target-blank": "error",
    "complexity": ["error", 10],
    "func-names": "off",
    "global-require": "off",
    "jest/no-focused-tests": "error",
    "linebreak-style": 0,
    "max-depth": ["error", 3],
    "max-lines": ["error", 300],
    "max-nested-callbacks": ["error", 3],
    "max-statements": ["error", 10],
    "no-param-reassign": "off",
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "prefer-destructuring": "off",
    "react/prop-types": "off",
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": [
        "./src/**/*.test.js",
        "./test/**/*.js",
        "./src/**/stories.js",
        "./src/tests.js",
        "./src/i18n-scanner.js"
        ]
      }
    ],
    "new-cap": ["error", {
      "newIsCapExceptions": ["mnemonic"]
    }]
  },
  "overrides": [
    {
      "files": [ 
        "*.test.js",
        "*.spec.js"
      ],
      "rules": {
        "max-depth": ["error", 2],
        "max-nested-callbacks": ["error", 4],
        "max-statements": ["error", 30],
        "max-lines": ["error", 500]
      }
    }
  ]
}
